---
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
import wpCrossfit from '../img/wp-crossfit.jpg';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>BoxFire Spain - Entrenamineto Funcional de Alta Intensidad</title>
	</head>
	<body>
		<div class="page-container">
			  <Header />
			
			<div class="image-container">
			  <div class="bg-black opacity-40"><Image src={wpCrossfit} alt="Imagen de un Crossfit"/></div>
			  <h1 class="image-text uppercase text-7xl">Gimnasio de Crossfit<br> en Castellón<h1/>
			</div>
		  </div>
		  
		
	</body>
	  
	  <style>
		/* Asegúrate de que el body y html ocupen toda la altura */
		html, body {
		  height: 100%;
		  margin: 0;
		  padding: 0;
		}
	  
		.page-container {
		  display: flex;
		  flex-direction: column;
		  height: 100vh; /* Viewport height */
		  background-color: black;
		  color: white;
		}
	  
		.image-container {
		  flex-grow: 1; /* Ocupa el espacio restante */
		  position: relative;
		  overflow: hidden; /* Para manejar imágenes muy grandes */
		}
	  
		.image-container img {
		  width: 100%;
		  height: 100%;
		  object-fit: cover; /* Cubre todo el contenedor manteniendo la proporción */
		}
	  
		.image-text {
		  position: absolute;
		  top: 7rem;
		  left: 7rem;
		  color: white;
		}
	  </style>
</html>
